{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@G/*": ["globals/*"]
    }
  },
  "exclude": [
    "node_modules",
    "frontend",
    "build"
  ]
}
