{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es2018",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@G/*": ["globals/*"]
    }
  },
  "exclude": [
    "node_modules",
    "frontend",
    "build"
  ]
}
