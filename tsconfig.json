{
  "compilerOptions": {
    // TODO: Try removing outDir, not needed since using ts-loader, neither is exclude.
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es2016",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "esnext.asynciterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@G/*": ["globals/*"]
    }
  },
  "exclude": [
    "node_modules",
    "frontend",
    "build"
  ]
}
