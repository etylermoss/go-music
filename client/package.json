{
  "name": "client",
  "scripts": {
    "clean": "rm -rf build/",
    "finished": "echo -e '\n――― Frontend build finished! ―――\n'",

    "build:dev": "webpack --config webpack.dev.js && npm run --silent finished",
    "build:prod": "webpack --config webpack.prod.js && npm run --silent finished",
    "build:release": "webpack --config webpack.prod.js && npm run --silent finished",

    "build": "func() { npm run --silent clean && npm run build:\"$1\"; }; func",

    "start": "webpack-dev-server --config webpack.dev_server.js --env.dev_server"
  },
  "devDependencies": {
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-react": "^7.18.3",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  }
}
